<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Style for the image in the list. -->
    <style name="detail_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">@dimen/padding_for_each_view</item>
    </style>

    <!-- Style for the title in the  list. -->
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/padding_for_each_view</item>
    </style>

    <!-- Style for the description in the  list. -->
    <style name="disc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/padding_for_each_view</item>
    </style>

    <!-- Style for the Tabs. -->
    <style name="tab" parent="Widget.Design.TabLayout" >
        <item name="tabIndicatorColor">@color/teal</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@color/indigo</item>
    </style>

</resources>
